{
	"name": "vscode-manager",
	"displayName": "VSCode Manager",
	"publisher": "Saurav Sahu",
	"description": "Manage VSCode custom profiles with isolated settings and extensions",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:customProfiles"
	],
	"main": "./out/extension.js",
	"contributes": {
		"menus": {
			"view/item/context": [
				{
					"command": "customProfiles.launch",
					"when": "view == customProfiles && viewItem == customProfile"
				}
			]
		},
		"commands": [
			{
				"command": "customProfiles.launch",
				"title": "Launch",
				"enablement": "view == customProfiles && viewItem == customProfile"
			}
		],
		"views": {
			"customProfilesExplorer": [
				{
					"id": "customProfiles",
					"name": "All Profiles"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "customProfilesExplorer",
					"title": "Custom Profiles Explorer",
					"icon": "resources/vscode-icon.svg"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.56.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"child_process": "^1.0.2"
	}
}